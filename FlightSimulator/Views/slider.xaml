<UserControl x:Class="FlightSimulator.Views.slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="230">
    <Grid DockPanel.Dock="Top" Margin="0,0,0,10" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel VerticalAlignment="Center" Margin="5,-8,7.333,-8" Height="30">
            <Slider x:Name="rudderSlider" Grid.Column="0" Minimum="-1" Maximum="1" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"/>
        </StackPanel>
        <TextBox Text="{Binding Value, ElementName=rudderSlider, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" TextAlignment="Right" Width="40" Margin="0,0" />
    </Grid>

</UserControl>
