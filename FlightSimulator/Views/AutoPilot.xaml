<UserControl x:Class="FlightSimulator.Views.AutoPilot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="AutoPilotBox" Background="{Binding Back}" Text="{Binding AutoPilotStr, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0"
                 AcceptsReturn="True" TextWrapping="Wrap" AcceptsTab="True"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="OK" Command="{Binding OKCommand}" Margin="10"/>
            <Button Content="Clear" Command="{Binding ClearCommand}" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
